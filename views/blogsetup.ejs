<%- include("./layouts/header.ejs") %>

<form action="" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm-20">
            <input type="text" id="blog_title" name="blog_title" class="form-control" placeholder="Enter Blog Title" required autofocus>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-20">
            <input type="file" name="blog_image" required>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-20">
            <textarea name="description" placeholder="Enter description" required></textarea>
        </div>
    </div> 
    <div class="row mt-3">
        <div class="col-sm-20">
            <input type="text" name="name" placeholder="Enter Admin Name" required>
        </div>
    </div> 
    <div class="row mt-3">
        <div class="col-sm-20">
            <input type="email" name="email" placeholder="Enter Admin Email" required>
        </div>
    </div>  
    <div class="row mt-3">
        <div class="col-sm-20">
            <input type="password" name="password" placeholder="Enter password" required>
        </div>
    </div> 
    <div class="row mt-3">
        <div class="col-sm-20">
            <input type="submit" name="submit" class="btn btn-primary btn-block" value="Blog setups">
        </div>
    </div>   
    
  </form>
<%
if(typeof message !== 'undefined'){ %>
<p style="color: brown;"><%= message %></p>
<%
}
%>
