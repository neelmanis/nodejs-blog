<%- include('./include/admin-header.ejs'); %>
<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row ">
                    <div class=" col d-flex justify-content-between">
                        <h4 class="page-title mb-2"></h4>
                        <ol class="breadcrumb justify-content-end">
                            <li class="breadcrumb-item"><a href="/news/create-news"></a> <i class="mdi mdi-chevron-right"></i></li>
                            <li class="breadcrumb-item active"></li>
                        </ol>
                    </div><!--end col-->               
                </div><!--end row-->                                                              
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div><!--end row-->
    <!-- end page title end breadcrumb -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                    <h4 class="card-title"><span class="badge bg-soft-success font-12">Create  Post</span></h4>
                    <a class=" btn btn-sm btn-soft-primary" href="/news/" role="button"><i class="fas fa-plus me-2"></i>PostList</a>
                    </div>
                </div><!--end card-header-->
                <div class="card-body">
                    <form method="POST" action="" enctype="multipart/form-data">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="title" id="title" placeholder="e.g. John Doe" value=""  autocomplete="off" autofocus="off" autosave="off">
                            <label for="title" data-title="title" >title</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control slug" name="slug" id="slug" placeholder="e.g. John Doe" value=""  autocomplete="off" autosave="off">
                            <label for="slug" data-title="slug" >slug</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="file" class="form-control" id="pic" name="photo">
                            <button type="button" class="btn btn-sm btn-outline-danger ml-50" id="remove-pic">Remove</button>
                            <label for="photo" data-title="photo" >Upload Photo</label>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea id="content" name="content" class="contenteditor form-control"> </textarea>
                             <label for="content" data-title="content">content</label>
                         </div>
                        <div class="form-floating mb-3">
                            <input type="hidden" name="status" id="status" value="1" >
                            <input type="hidden" name="event"  value="1" >
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        
                    </form>
                </div><!--end card-body-->
            </div><!--end card-->
        </div><!--end col-->
    </div>
  </div><!-- container -->

  <%
  if(typeof message !== 'undefined'){ %>
  <p style="color: rgb(19, 239, 23);"><%= message %></p>
  <%
  }
  %>
<%- include('./include/admin-footer.ejs'); %>